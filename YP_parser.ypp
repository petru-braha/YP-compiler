/*! text constant states */

cst_call: C_INT { $$ = ($1); }
        | C_FLT { $$ = ($1); }
        | C_CHR { $$ = ($1); }
        | C_STR { $$ = ($1); }
        | C_BOL { $$ = ($1); }
        ;

